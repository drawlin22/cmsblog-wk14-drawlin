{{#if logged_in}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>
 <div class="form-group">
         <form class="form new-project-form">
        <label for="project-name">Blog Post Title:</label>
        <input class="form-input blogTitle" type="text" id="blogpost-title" name="blogpost-title" />
        <label for>Blog Post Content:</label>
        <input class="form-input blogText" type="text" id="blogpost-content" name="blogpost-content" />
        <button type="submit" class="btn btn-sm btn-danger submitPost" data-id="{{post.id}} ">Submit</button>
        </form>
      </div>
  {{#if blogPosts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Blog Posts:</h3>
    {{#each blogPosts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="/js/addPost.js"></script>
{{/if}}

